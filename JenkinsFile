pipeline {
    agent any

    stages {
        stage('Export Messages') {
            steps {
                script {
                    // Display workspace and file path for debugging
                    echo "Workspace: ${env.WORKSPACE}"
                    
                    // Run the batch file
                    bat "${env.WORKSPACE}\\export_messages.bat"
                }
            }
        }
    }

    post {
        success {
            echo 'Messages exported successfully'
        }
        failure {
            echo 'Failed to export messages'
        }
    }
}
